<Page x:Class="Quiz_Gui_Game.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quiz_Gui_Game"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid Background="LightGray">
        <StackPanel HorizontalAlignment="center">
            <Label FontSize="24px">Quizzowanie</Label>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Zagraj" Click="PlayButton_Click" Margin="2 2 2 2"/>
            <Button Content="Zrób nowy quiz"  Margin="2 2 2 2" />
            <Button Content="Zagraj w losowy quiz" Click="RandomButton_Click"  Margin="2 2 2 2"/>
            <Button Content="Usuń quiz"  Margin="2 2 2 2"/>
            <Button Content="Wyświetl historię"  Margin="2 2 2 2"/>
            <Button Content="Wyjdź" Click="ExitButton_Click"   Margin="2 2 2 2"/>
        </StackPanel>
    </Grid>
</Page>
