<Page x:Class="Quiz_Gui_Game.CreateQuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quiz_Gui_Game"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateQuizPage" Opacity="0">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/background.png"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="center">
            <Label Style="{StaticResource SubtitleStyle}">Tworzenie Nowego Quizu</Label>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Podaj nazwę nowego Quizu:" Style="{StaticResource ParagraphStyle}"/>
            <TextBox x:Name="QuizNameTextBox" Width="200" Margin="0,5,0,10" Style="{StaticResource QuizTextBoxStyle}"/>
            <Button Content="Dodaj Pytanie" Click="AddQuestionButton_Click" Style="{StaticResource QuizButtonStyle}"/>
            <Button Content="Powrót" Click="FinishButton_Click" Style="{StaticResource QuizButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
