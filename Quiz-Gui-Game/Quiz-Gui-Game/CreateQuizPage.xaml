<Page x:Class="Quiz_Gui_Game.CreateQuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quiz_Gui_Game"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateQuizPage">

    <Grid Background="LightGray">
        <StackPanel HorizontalAlignment="center">
            <Label FontSize="24px">Tworzenie Nowego Quizu</Label>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Podaj nazwę nowego Quizu:"/>
            <TextBox x:Name="QuizNameTextBox" Width="200" Margin="0,5,0,10"/>
            <Button Content="Dodaj Pytanie" Click="AddQuestionButton_Click"/>
            <!-- Add other controls for adding questions and answers -->
            <Button Content="Zakończ" Click="FinishButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
